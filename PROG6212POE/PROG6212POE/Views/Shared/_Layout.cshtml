<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Lecturer Claim System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Lecturer Claim System</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">

                    <!-- Lecturer Links -->
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Lecturer" asp-action="MakeAClaim">Submit Claim</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Lecturer" asp-action="TrackClaimStatus" class="nav-link">Track Claim Status</a>
                    </li>
                    <!-- Admin / Coordinator Links -->
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="ReviewClaims">Review Claims</a>
                    </li>

                    <!-- Manager Links -->
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="VerifyClaims">Verify Claims</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
